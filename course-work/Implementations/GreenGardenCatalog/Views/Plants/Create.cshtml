@model GreenGardenCatalog.Entities.Plant

@{
    ViewData["Title"] = "Create Plant";
}

<h1>Create New</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlantingSeason"></label>
        <input asp-for="PlantingSeason" class="form-control" />
        <span asp-validation-for="PlantingSeason" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HeightInCm"></label>
        <input asp-for="HeightInCm" class="form-control" />
        <span asp-validation-for="HeightInCm" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsInStock"></label>
        <select asp-for="IsInStock" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="IsInStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoilId">Soil</label>
        <select asp-for="SoilId" class="form-control" asp-items="ViewBag.SoilId">
            <option value="">Select Soil</option>
        </select>
        <span asp-validation-for="SoilId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FertilizerId">Fertilizer</label>
        <select asp-for="FertilizerId" class="form-control" asp-items="ViewBag.FertilizerId">
            <option value="">Select Fertilizer</option>
        </select>
        <span asp-validation-for="FertilizerId" class="text-danger"></span>
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}